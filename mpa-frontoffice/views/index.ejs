<style>
.register-bg {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(120deg, #eafaf1 0%, #f4f8fb 100%);
  overflow: hidden;
  z-index: 0;
}
.register-bg-shape, .register-bg-shape2 {
  position: absolute;
  left: 0; right: 0;
  width: 100vw;
  min-width: 100%;
  pointer-events: none;
  display: block;
}
.register-bg-shape {
  top: 0;
  height: 220px;
  z-index: 1;
}
.register-bg-shape2 {
  bottom: 0;
  height: 180px;
  z-index: 1;
}
.register-content {
  position: relative;
  z-index: 2;
}
.register-input {
  transition: box-shadow 0.3s, border-color 0.3s;
  border-radius: 0.7rem;
  background: #f8f9fa;
}
.register-input:focus {
  border-color: #27ae60;
  box-shadow: 0 0 0 0.2rem rgba(39,174,96,0.13);
  background: #fff;
}
.register-btn {
  background: linear-gradient(90deg,#27ae60,#2980b9);
  border: none;
  box-shadow: 0 4px 16px rgba(41,128,185,0.08);
  transition: background 0.3s, transform 0.2s, box-shadow 0.2s;
}
.register-btn:hover {
  background: linear-gradient(90deg,#2980b9,#27ae60);
  transform: translateY(-2px) scale(1.04);
  box-shadow: 0 8px 32px rgba(39,174,96,0.13);
}
.animate-fadein { animation: fadein 1.2s; }
.animate-fadein-delay { animation: fadein 1.2s 0.5s both; }
.animate-fadein-delay2 { animation: fadein 1.2s 1s both; }
.animate-slidein { animation: slidein 1.2s; }
@keyframes fadein { from { opacity: 0; } to { opacity: 1; } }
@keyframes slidein { from { opacity: 0; transform: translateY(40px);} to { opacity: 1; transform: none; } }
</style>
